guard :haml, run_at_start: true, input: '_app/templates', output: 'tmp/templates' do
  watch %r{^_app/templates/.+(\.hbs\.haml)}
end

guard :haml, run_at_start: true, input: '_pages', output: '.' do
  watch %r{^_pages/.+(\.hbs\.haml)}
end

guard :haml, run_at_start: true, input: '_layouts', output: '_layouts' do
  watch %r{^_layouts/.+(\.hbs\.haml)}
end

