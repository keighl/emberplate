    if (Modernizr.history) {
      hash = window.location.hash;
      if (hash.length) {
        href = hash.replace('#', '');
        window.location.href = href;
      }
    } else {
      pathname = window.location.pathname;
      if (pathname.length > 1) {
        window.location.href = '/#' + pathname;
      }
    }

